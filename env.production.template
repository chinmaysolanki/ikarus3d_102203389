# Production Environment Configuration for Ikarus Furniture Recommendation Engine
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=IkarusFurnitureEngine
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# CORS origins (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI API Key (optional, for enhanced AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face API Key (optional, for model downloads)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Pinecone Configuration (optional, falls back to FAISS if not provided)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=furniture-recommendations

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (optional, for production data persistence)
DATABASE_URL=postgresql://username:password@localhost:5432/furniture_db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry DSN (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend API URL (used by Vite build)
VITE_API_URL=https://api.yourdomain.com

# =============================================================================
# MONITORING DASHBOARDS
# =============================================================================
# Grafana Configuration
GRAFANA_PASSWORD=your-secure-grafana-password

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 Configuration (optional, for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# EMAIL CONFIGURATION (optional)
# =============================================================================
# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Worker Configuration
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# SSL Certificate paths (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles for gradual rollout
ENABLE_AI_DESCRIPTIONS=true
ENABLE_IMAGE_SEARCH=true
ENABLE_RECOMMENDATION_CACHING=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_USER_PROFILES=false

# =============================================================================
# RATE LIMITING
# =============================================================================
# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=200

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Override settings for development/testing
# Set to true only in development environments
DEVELOPMENT_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTHENTICATION=false
